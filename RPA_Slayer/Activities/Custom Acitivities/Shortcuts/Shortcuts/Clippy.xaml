<sap:ActivityDesigner x:Class="Shortcuts.Clippy"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sap="clr-namespace:System.Activities.Presentation;assembly=System.Activities.Presentation"
    xmlns:sapv="clr-namespace:System.Activities.Presentation.View;assembly=System.Activities.Presentation" Width="319.415">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Select an action:" Grid.Column="0" Grid.Row="0"/>
        <Button Content="cut" Click="Cut_Click" Margin="5,5.4,5,6.8" Grid.Row="1" Background="#FF90F092"/>
        <Button Content="copy" Click="Copy_Click" Margin="5,5.4,104.6,6.8" Grid.Row="1" Background="#FF90F092" Grid.Column="1"/>
        <Button Content="paste" Click="Paste_Click" Margin="116,5.4,9.6,6.8" Grid.Row="1" Background="#FF90F092" Grid.Column="1"/>
    </Grid>
</sap:ActivityDesigner>
